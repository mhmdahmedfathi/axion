SERVICE_NAME=axion
ENV=development
USER_PORT=5111
ADMIN_PORT=5222
ADMIN_URL=http://localhost:5222

# Database Configuration
MONGO_URI=mongodb://localhost:27017/axion
REDIS_URI=redis://127.0.0.1:6379

# Redis Keys / Prefixes (Optional override, defaults to REDIS_URI)
# CORTEX_REDIS=
# OYSTER_REDIS=
# CACHE_REDIS=

CORTEX_PREFIX=none
CORTEX_TYPE=axion
OYSTER_PREFIX=none
CACHE_PREFIX=axion:ch

# Security Secrets (REQUIRED)
LONG_TOKEN_SECRET=change_this_to_a_long_secure_random_string
SHORT_TOKEN_SECRET=change_this_to_a_short_secure_random_string
NACL_SECRET=change_this_to_a_secure_nacl_secret
